extends layout
block content
  .row.page-header
    .col-lg-12
      h1= "Add Location"
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(method="post")
        - if (error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group
          label.col-xs-2.col-sm-2.control-label Name
          .col-xs-10.col-sm-10
            input(name="name").form-control

        .form-group
          label.col-xs-2.col-sm-2.control-label Address
          .col-xs-10.col-sm-10
            textarea(name="address").form-control

        .form-group
          label.col-xs-2.col-sm-2.control-label Facilities
          .col-xs-10.col-sm-10
            input(name="facilities").form-control

        .form-group
          label.col-xs-2.col-sm-2.control-label Longitude
          .col-xs-4.col-sm-4
            input(name="lat")#name.form-control
          label.col-xs-2.col-sm-2.control-label Latitude
          .col-xs-4.col-sm-4
            input(name="lng")#name.form-control


        button.btn.btn-default.pull-right Add Location
    .col-xs-12.col-md-4